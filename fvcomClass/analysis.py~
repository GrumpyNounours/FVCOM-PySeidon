import numpy as np

class analysis:
    """ """
    def __init__(self, run):
        ''' '''
        self.QC = run.QC
        self.variables = run.variables

    def el_region(self):
        ''' '''
        variables.region_e = np.argwhere((variables.lonc >= variables.ax[0]) &
                                         (variables.lonc <= variables.ax[1]) &
                                         (variables.latc >= variables.ax[2]) &
                                         (variables.latc <= variables.ax[3]))

        print variables.region_e

    def node_region(self):
        ''' '''
        variables.region_n = np.argwhere((variables.lon >= variables.ax[0]) &
                                         (variables.lon <= variables.ax[1]) &
                                         (variables.lat >= variables.ax[2]) &
                                         (variables.lat <= variables.ax[3]))

        print variables.region_e

